{
  "extends": ["airbnb", "prettier"],

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "printWidth": 100 }]
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
